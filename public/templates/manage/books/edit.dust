{>"layouts/manage" /}

{<body}
  <div class="col-lg-3">
    <h2>Edit Book</h2>
    <form method="post" action="/manage/books/edit/{book._id}">
      <div class="row">
        <div class="col-lg-3">
          <label>Title
            <input name="title" type="text" value="{book.title}"/>
          </label>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-3">
          <label>Author
            <input name="author" type="text" value="{book.Author}"/>
          </label>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-3">
          <label>Publisher
            <input name="publisher" type="text" value="{book.publisher}"/>
          </label>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-3">
          <label>Price
            <input name="price" type="text" value="{book.price}"/>
          </label>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-3">
          <label>Category
            <select name="category">
            {#categories}
              <option value="{.name}">{.name}</option>
            {/categories}
            </select>
          </label>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-3">
          <label>Description
            <textarea name="description"/>{book.description}</textarea>
          </label>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-3">
          <label>URL
            <input name="cover" type="text" value="{book.cover}"/>
          </label>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-3">
          <input type="submit" class="button" value="Submit"/>
        </div>
      </div>
      <input type="hidden" name="_csrf" value="{_csrf}"/>
    </form>
  </div>
{/body}
